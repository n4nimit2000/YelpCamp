<%- include('../partials/header') -%>

<div class='container'>
    <h2 style="text-align: center; margin-top:10%;">
        Editing <%= campground.name%>
    </h2>
    
    <div style="width: 400px; margin:30px auto;">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type='text' name='name' value="<%=campground.name%>"  required>
            </div>
            <div class="form-group">
                <input class="form-control" type='text' name='url' value="<%=campground.url%>" required>
            </div>
            <textarea name="description"><%=campground.description%></textarea>
            <div class="form-group">
                <input class="btn btn-danger btn-block" type='submit' value="Submit!">
            </div>
        </form>
        
        <a class="btn btn-primary" href="/campgrounds">Go back</a>
    </div>
</div>


<%- include('../partials/footer') -%>