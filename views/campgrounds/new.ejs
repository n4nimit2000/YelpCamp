<%- include('../partials/header') -%>

<div class='container'>
    <h2 style="text-align: center; margin-top:10%;">
        Creating a new campground!
    </h2>
    
    <div style="width: 400px; margin:30px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type='text' name='name' placeholder="Name of the camp" required>
            </div>
            <div class="form-group">
                <input class="form-control" type='text' name='url' placeholder='Image Url' required>
            </div>
            <textarea name="description" ></textarea>

            <div class="form-group">
                <input class="btn btn-danger btn-block" type='submit' value="Submit!">
            </div>
        </form>
        
        <a class="btn btn-primary" href="/campgrounds">Go back</a>
    </div>
</div>


<%- include('../partials/footer') -%>